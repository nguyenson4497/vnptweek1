<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cards_heading"
    android:paddingStart="14dp"
    android:paddingLeft="14dp"
    android:paddingTop="36dp"
    android:paddingEnd="22dp"
    android:paddingRight="22dp"
    android:paddingBottom="130dp">

    <ImageView
        android:id="@+id/iv_return_to_main_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_text_heading_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/cuentas_bancarias_y_tarjetas"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_return_to_main_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:lineHeight="18sp"
        android:text="@string/mantenemos_tus_datos_financieros_protegidos_para_que_nadie_vea_la_informaci_n_confidencial"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text_heading_1"
        tools:targetApi="p" />
</androidx.constraintlayout.widget.ConstraintLayout>